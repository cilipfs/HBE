<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sk.suchac.hbe"
    android:versionCode="0126"
    android:versionName="1.3" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="9" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="sk.suchac.hbe.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="sk.suchac.hbe.ScriptureActivity"
            android:label="@string/title_activity_scripture" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="sk.suchac.hbe.MainActivity" />
        </activity>
        <activity
            android:name="sk.suchac.hbe.FinishingActivity"
            android:label="@string/title_activity_finishing" >
        </activity>
        <activity
            android:name="sk.suchac.hbe.BookmarkActivity"
            android:label="@string/title_activity_bookmark" >
        </activity>
    </application>

</manifest>